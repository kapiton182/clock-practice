<aura:component>
  <aura:attribute name="time" type="String" />
  <aura:attribute name="timeOffset" type="Integer" default="0" />
  <aura:attribute name="sign" type="String" />
  <aura:handler name='init' value='{!this}' action='{!c.doInit}' />

  <div class="clock-flex-container">
    <div class="clock">{!v.time}</div>
    <div class="sign">{!v.sign}</div>
  </div>

</aura:component>